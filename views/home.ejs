<!-- adding header files -->
<%- include("partials/header") %>

    <h1>Home</h1>
    <p><%=homeText%></p>

    <% posts.forEach(function(post) { %>
        <h1><%= post.title.substring(0, 100) %></h1>
        <p>
            <%= post.content.substring(0, 500) + "... " %>
            <a href="/posts/<%=post._id%>">Read More</a>
        </p>
    <% }); %>
    
<!-- adding footer files -->
<%- include("partials/footer") %>